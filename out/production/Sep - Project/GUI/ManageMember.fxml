         <font>
            <Font name="Arial Bold" size="12.0" />
         </font>
      </RadioButton>
      <RadioButton fx:id="email" layoutX="429.0" layoutY="30.0" mnemonicParsing="false" onAction="#actionHandler" prefHeight="16.0" prefWidth="62.0" text="  Email">
         <font>
            <Font name="Arial Bold" size="12.0" />
         </font>
      </RadioButton>
      <TextField fx:id="search" layoutX="43.0" layoutY="54.0" onAction="#actionHandler" prefHeight="26.0" prefWidth="440.0" />
