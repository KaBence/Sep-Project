<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.ManageMemberController">
   <children>
      <RadioButton fx:id="name" layoutX="205.0" layoutY="37.0" mnemonicParsing="false" onAction="#actionHandler" prefHeight="16.0" prefWidth="62.0" text=" Name">
         <font>
            <Font name="Arial Bold" size="12.0" />
         </font>
      </RadioButton>
      <RadioButton fx:id="phone" layoutX="311.0" layoutY="37.0" mnemonicParsing="false" onAction="#actionHandler" prefHeight="16.0" prefWidth="71.0" text="  Phone">
         <font>
            <Font name="Arial Bold" size="12.0" />
         </font>
      </RadioButton>
      <RadioButton fx:id="email" layoutX="427.0" layoutY="37.0" mnemonicParsing="false" onAction="#actionHandler" prefHeight="16.0" prefWidth="62.0" text="  Email">
         <font>
            <Font name="Arial Bold" size="12.0" />
         </font>
      </RadioButton>
      <TextField fx:id="search" layoutX="66.0" layoutY="82.0" onAction="#actionHandler" prefHeight="26.0" prefWidth="350.0" />
      <Label layoutX="66.0" layoutY="36.0" text="Search a member by" />
      <Separator layoutX="-1.0" layoutY="124.0" prefHeight="36.0" prefWidth="600.0" scaleY="2.0" />
      <TableView fx:id="tableView" layoutX="-1.0" layoutY="142.0" onSort="#actionHandler" prefHeight="150.0" prefWidth="600.0">
        <columns>
          <TableColumn fx:id="memberName" prefWidth="200.0" text="Member name" />
          <TableColumn fx:id="memberEmail" prefWidth="200.0" text="Email" />
            <TableColumn fx:id="memberPhone" prefWidth="200.0" text="Phone" />


        </columns>
      </TableView>
      <Button fx:id="searchButton" layoutX="448.0" layoutY="80.0" mnemonicParsing="false" onAction="#searchClicked" text="Search">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Button>
      <Button fx:id="back" layoutX="37.0" layoutY="340.0" mnemonicParsing="false" onAction="#backClicked" text="Back">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
